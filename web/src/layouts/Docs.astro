---
import '@fontsource-variable/rubik/wght.css'
import '@assets/global.css'
import '@assets/shiki.css'
import getApiReferenceHeadings from '@lib/typedoc/headings'
import Head from '@components/Head.astro'
import Navigation from '@components/docs/nav/Navigation.astro'
import rubikWoff2 from '@fontsource-variable/rubik/files/rubik-latin-wght-normal.woff2?url'
import TableOfContents from '@components/docs/TableOfContents'
import ThemeScript from '@components/ThemeScript.astro'
import Topbar from '@components/Topbar.astro'

interface Props {
  frontmatter: {
    title: string
    description: string
    image: string
  }
  headings: {
    depth: number
    text: string
    slug: string
  }[]
}

const { frontmatter, headings } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Head {...frontmatter} />
    <link rel="canonical" href={Astro.url} />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={rubikWoff2}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/fonts/MonaspaceNeon-Regular-v1.101.woff2"
      crossorigin="anonymous"
    />
    <ThemeScript />
    <script
      defer
      data-domain="ararajs.vercel.app"
      data-api="/plausible/api/event/"
      src="/plausible/js/script.js"
      is:inline></script>
  </head>
  <body class="flex flex-col bg-arara-bg text-arara-text antialiased">
    <Topbar inDocs />
    <main class="mx-auto mt-24 w-full max-w-7xl">
      <div class="flex md:pl-0">
        <div
          class="fixed hidden h-[calc(100%-88px)] w-52 overflow-y-auto px-4 pb-10 scrollbar-thin md:block"
        >
          <Navigation />
        </div>
        <div class="-mt-6 grow lg:-mt-20">
          <article
            class="prose max-w-[800px] bg-arara-article-bg px-8 pt-8 shadow-custom-inset shadow-arara-bg @container prose-headings:scroll-mt-20 prose-h1:mb-4 prose-h1:text-4xl prose-h1:font-black prose-h1:font-finger-paint prose-h2:mb-4 prose-h2:mt-8 prose-h2:text-2xl prose-h2:font-extrabold prose-h3:mb-4 prose-h3:mt-8 prose-h3:text-xl prose-h3:font-bold prose-p:mb-2 prose-p:max-w-3xl prose-p:!leading-7 prose-a:text-arara-link prose-a:underline hover:prose-a:text-arara-link-hover prose-blockquote:rounded-md prose-blockquote:border-2 prose-blockquote:border-arara-200 prose-blockquote:bg-arara-100 prose-blockquote:px-4 prose-blockquote:py-2 prose-code:whitespace-nowrap prose-code:rounded prose-code:border prose-code:border-arara-200 prose-code:bg-arara-100 prose-code:px-1.5 prose-code:pb-0.5 prose-code:pt-1 prose-code:text-sm prose-ol:mb-3 prose-ol:ml-[21px] prose-ol:list-outside prose-ol:list-decimal prose-ul:mb-3 prose-ul:ml-[21px] prose-ul:list-outside prose-ul:list-disc prose-li:mb-1 md:ml-60 md:px-12 md:pt-12 lg:prose-headings:scroll-mt-2"
          >
            <slot />
            <div
              class="not-prose mb-8 mt-16 flex justify-end space-x-4 border-t-2 border-arara-200 pt-4 text-sm"
              data-typesense-ignore
            >
              <p class="text-right">
                Library developed by <a
                  href="https://github.com/FelipeEmos/"
                  target="_blank"
                  class="-m-2 p-2 font-medium text-arara-link underline hover:text-arara-link-hover"
                  >Felipe Emos</a
                >
              </p>
              <p class="text-right">
                Website designed by <a
                  href="https://github.com/GiyoMoon/"
                  target="_blank"
                  class="-m-2 p-2 font-medium text-arara-link underline hover:text-arara-link-hover"
                  >Jasmin</a
                > from <a
                  href="https://corvu.dev/"
                  target="_blank"
                  class="-m-2 p-2 font-medium text-arara-link underline hover:text-arara-link-hover"
                  >Corvu</a
                >
              </p>
            </div>
          </article>
        </div>
        <div class="ml-6 hidden w-52 text-sm lg:flex">
          <TableOfContents
            headings={headings}
            apiHeadings={getApiReferenceHeadings(headings[0].text)}
            client:media="(min-width: 1024px)"
          />
        </div>
      </div>
    </main>
  </body></html
>
