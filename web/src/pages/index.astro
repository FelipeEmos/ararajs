---
import '@assets/global.css'
import Fonts from '@components/Fonts.astro'
import Head from '@components/Head.astro'
import SolidJSLogo from '@assets/res/solidjs_logo.svg'
import ThreeJSLogo from '@assets/res/threejs_logo.svg'
import ThreeJSLogoDark from '@assets/res/threejs_logo_dark.svg'
import HtmlLogo from '@assets/res/html_logo.png'
import LogoDark from '@assets/title_with_logo_dark.svg'
import LogoLight from '@assets/title_with_logo_light.svg'
import ThemeScript from '@components/ThemeScript.astro'
import Topbar from '@components/Topbar.astro'
import { HoverCard } from '@examples/hover-card/HoverCard'
import { Spring2DDemo } from '@examples/spring/Spring2DDemo'
import { SineWave2DDemo } from '@examples/sine-wave/SineWave2DDemo'
import araraImage from '@assets/examples/arara_blue.jpg'
import Code from '@components/docs/code/Code.astro'
import { SliderSineWaveDemo } from '@examples/sine-wave/SliderSineWaveDemo'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Head
      title="Animated Signals for SolidJS"
      description="SolidJS animation primitives using signals, useful for procedural and highly reactive animations"
      image="https://ararajs.vercel.app/banner.jpg"
    />
    <link rel="canonical" href={Astro.url} />
    <ThemeScript />
    <Fonts />
    <script
      defer
      data-domain="ararajs.vercel.app"
      data-api="/plausible/api/event/"
      src="/plausible/js/script.js"
      is:inline></script>
  </head>
  <body class="flex flex-col bg-arara-bg text-arara-text antialiased">
    <Topbar />
    <main class="flex w-full flex-col items-center">
      <!-- Hero Section -->
      <div
        class="relative flex max-w-7xl grow flex-col items-center px-8 py-20 md:pb-20 md:pt-40"
      >
        <div class="flex flex-col items-center">
          <img
            src={LogoDark.src}
            alt="arara logo dark"
            class="h-40 dark:hidden md:h-52"
          />
          <img
            src={LogoLight.src}
            alt="arara logo light"
            class="hidden h-40 dark:block md:h-52"
          />
          <h1 class="mt-5 text-center text-2xl md:text-3xl">
            SolidJS Animations <u class="text-nowrap">with signals</u>
          </h1>
          <div class="mt-8 flex gap-4">
            <a
              href="/docs/"
              class="rounded-lg bg-arara-300 px-6 py-3 text-lg font-medium transition-all duration-100 active:translate-y-0.5"
            >
              Get started
            </a>
            <a
              href="/docs/"
              class="rounded-lg border-2 border-arara-300 px-6 py-3 text-lg font-medium transition-all duration-100 active:translate-y-0.5"
            >
              View Docs
            </a>
          </div>
        </div>
      </div>

      <!-- Demo Sections -->
      <div class="grid w-full gap-20">
        <!-- Interactive Card Demo Section -->
        <section class="w-full">
          <!-- Background with curved top -->
          <div
            class="h-20 bg-arara-200/70 [clip-path:ellipse(100%_300px_at_center_380%)] md:h-32 md:[clip-path:ellipse(100%_300px_at_center_280%)]"
          ></div>
          <div
            class="flex flex-col items-center bg-arara-200/70 py-12 pt-4 md:pb-28 md:pt-12"
          >
            <div class="grid max-w-7xl items-center gap-8 md:grid-cols-2">
              <div class="px-8 md:px-12">
                <h2 class="mb-4 text-3xl font-bold">Interactive Animations</h2>
                <p class="text-lg">
                  Create rich, physics-based interactions by combining springs
                  and sine waves <i class="bg-arara-400 p-1">for now ðŸ‘€</i>
                </p>
                <p class="pt-4 text-lg">
                  Stay inside the reactive paradigm of <u>SolidJS</u>
                </p>
                <p class="pt-4 text-lg">
                  No need to move out of reactivity to deal with the imperative
                  / sequential nature of animations.
                </p>
              </div>
              <div class="flex justify-center">
                <HoverCard
                  client:idle
                  imgSrc={araraImage.src}
                  class="max-w-80"
                />
              </div>
            </div>
          </div>
          <!-- Interactive Card Demo -->
        </section>

        <!-- Spring Physics Demo -->
        <section class="flex w-full justify-center md:py-12">
          <div
            class="grid w-full max-w-7xl items-center gap-8 px-8 md:grid-cols-2 md:px-12"
          >
            <div class="md:order-2">
              <h2 class="mb-4 text-3xl font-bold">Emergent Behavior</h2>
              <p class="text-lg">
                Create complex animations by combining simple signal primitives.
              </p>
              <p class="pt-4 text-lg">
                Like building blocks, use <span
                  class="bg-arara-200 p-1 font-finger-paint">Spring</span
                >
                for your transitions and respond smoothly to dynamic changes.
              </p>
            </div>
            <div class="md:order-1">
              <Spring2DDemo class="bg-arara-text/90" client:load />
            </div>
          </div>
        </section>

        <!-- Sine Wave Demo -->
        <section class="flex w-full justify-center bg-arara-200/70 py-32">
          <div
            class="grid w-full max-w-7xl items-center gap-8 px-8 md:grid-cols-2 md:px-12"
          >
            <div class="md:order-1">
              <h2 class="mb-4 text-3xl font-bold">Animated Signals</h2>
              <p class="pb-6 text-lg">
                Create highly reactive and composable animations through signal
                primitives.
              </p>
              <h3 class="text-xl">1D</h3>
              <Code
                code={`const [body] = createSine(() => ({
   frequency: freq(),
}))`}
                lang="tsx"
              />
              <h3 class="text-xl">2D</h3>
              <Code
                code={`const [body2D] = createSineWave2D({
  amplitude: [90, 90],
  frequency: [1, 1],
  phase: [Math.PI/2, 0]
})`}
                lang="tsx"
              />
            </div>
            <div class="flex flex-col gap-8 md:order-2">
              <SliderSineWaveDemo client:load class="bg-arara-text/90" />
              <SineWave2DDemo client:load class="bg-arara-text/90" />
            </div>
          </div>
        </section>

        <!-- Render Agnostic Section -->
        <section class="flex w-full justify-center py-12">
          <div class="w-full max-w-7xl px-8 md:px-12">
            <h2 class="mb-8 text-left text-3xl font-bold">Render Agnostic</h2>
            <p class="mb-12 text-left text-lg">
              Use AraraJS animations with any renderer that SolidJS can control
            </p>

            <div class="grid gap-8 md:grid-cols-3">
              <!-- DOM Card -->
              <a
                href="https://wikipedia.org/wiki/Document_Object_Model"
                class="flex flex-col border-l-8 border-arara-400 bg-arara-200/70 p-8 shadow-lg transition-all hover:-translate-y-2 hover:shadow-xl"
              >
                <img
                  src={HtmlLogo.src}
                  alt="HTML5 Logo"
                  class="mb-4 size-24 py-1"
                />
                <h3 class="mb-4 text-2xl font-semibold">DOM</h3>
                <p class="text-left"> Animate HTML elements directly </p>
                <p class="pt-3 text-left">
                  Manipulate attributes like <i>transform</i>, <i>opacity</i>,
                  <i>color</i>...
                </p>
              </a>

              <!-- Three.js Card -->
              <a
                href="https://threejs.org/"
                class="flex flex-col border-l-8 border-arara-400 bg-arara-200/70 p-8 shadow-lg transition-all hover:-translate-y-2 hover:shadow-xl"
              >
                <img
                  src={ThreeJSLogo.src}
                  alt="Three.js Logo"
                  class="mb-4 size-24 py-1 dark:hidden"
                />
                <img
                  src={ThreeJSLogoDark.src}
                  alt="Three.js Logo"
                  class="mb-4 hidden size-24 py-1 dark:block"
                />
                <h3 class="mb-4 text-2xl font-semibold">Three.js</h3>
                <p class="text-left">
                  Create stunning 3D animations by plugging it into Three.js
                </p>
              </a>

              <!-- Custom Renderer Card -->
              <a
                href="https://docs.solidjs.com/"
                class="group flex flex-col border-l-8 border-arara-400 bg-arara-200/70 p-8 shadow-lg transition-all hover:-translate-y-2 hover:shadow-xl"
              >
                <div class="relative mb-4 size-24">
                  <span
                    class="absolute flex size-24 items-center justify-center text-[72px] transition-opacity duration-500 group-hover:opacity-0"
                    >ðŸŽ¨</span
                  >
                  <img
                    src={SolidJSLogo.src}
                    alt="SolidJS Logo"
                    class="absolute size-24 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
                  />
                </div>
                <h3
                  class="mb-4 flex flex-row flex-wrap gap-1 text-2xl font-semibold"
                >
                  Custom
                  <div class="relative">
                    <span
                      class="transition-opacity duration-500 group-hover:opacity-0"
                      >Renderers</span
                    >
                    <span
                      class="absolute left-0 rounded-sm bg-arara-text px-1 text-arara-article-bg opacity-0 transition-opacity duration-500 group-hover:opacity-100"
                      >SolidJS</span
                    >
                  </div>
                </h3>
                <p class="text-left">
                  Works with any custom renderer or visualization library that
                  <span class="group-hover:font-bold">SolidJS</span> can control
                </p>
              </a>
            </div>
          </div>
        </section>

        <!-- CTA Footer -->
        <section class="flex w-full justify-center bg-arara-200/70 py-20">
          <div
            class="flex w-full max-w-7xl flex-col items-center gap-6 px-8 text-center md:px-12"
          >
            <div class="flex flex-col flex-wrap items-start gap-2">
              <h2 class="text-3xl font-bold"
                >Jump <span class="font-normal">into</span></h2
              >
              <img
                src={LogoDark.src}
                alt="arara logo dark"
                class="h-20 dark:hidden"
              />
              <img
                src={LogoLight.src}
                alt="arara logo light"
                class="hidden h-20 dark:block"
              />
            </div>
            <a
              href="/docs/"
              class="mt-2 rounded-lg border-2 border-arara-400 bg-arara-bg px-6 py-3 text-lg font-medium shadow-xl transition-all duration-100 hover:-translate-y-1 hover:bg-arara-400 active:translate-y-0.5"
            >
              Get started
            </a>
          </div>
        </section>
      </div>
    </main>
  </body></html
>
