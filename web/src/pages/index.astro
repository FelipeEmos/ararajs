---
import '@fontsource-variable/rubik/wght.css'
import '@assets/global.css'
import Fonts from '@components/Fonts.astro'
import Head from '@components/Head.astro'
import LogoDark from '@assets/title_with_logo_dark.svg'
import LogoLight from '@assets/title_with_logo_light.svg'
import rubikWoff2 from '@fontsource-variable/rubik/files/rubik-latin-wght-normal.woff2?url'
import ThemeScript from '@components/ThemeScript.astro'
import Topbar from '@components/Topbar.astro'
import { HoverCard } from '@examples/hover-card/HoverCard'
import { Spring2DDemo } from '@examples/spring/Spring2DDemo'
import { SineWave2DDemo } from '@examples/sine-wave/SineWave2DDemo'
import araraImage from '@assets/examples/arara_blue.jpg'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Head
      title="Animated Signals for SolidJS"
      description="SolidJS animation primitives using signals, useful for procedural and highly reactive animations"
      image="https://ararajs.vercel.app/banner.jpg"
    />
    <link rel="canonical" href={Astro.url} />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={rubikWoff2}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/fonts/MonaspaceNeon-Regular-v1.101.woff2"
      crossorigin="anonymous"
    />
    <ThemeScript />
    <Fonts />
    <script
      defer
      data-domain="ararajs.vercel.app"
      data-api="/plausible/api/event/"
      src="/plausible/js/script.js"
      is:inline></script>
  </head>
  <body class="flex flex-col bg-arara-bg text-arara-text antialiased">
    <Topbar />
    <main class="mx-auto w-full max-w-7xl px-4 pb-20">
      <!-- Hero Section -->
      <div class="flex grow flex-col items-center pt-20 md:pt-40">
        <div class="flex flex-col items-center">
          <img
            src={LogoDark.src}
            alt="arara logo dark"
            class="h-40 dark:hidden md:h-52"
          />
          <img
            src={LogoLight.src}
            alt="arara logo light"
            class="hidden h-40 dark:block md:h-52"
          />
          <h1 class="mt-5 text-center text-2xl md:text-3xl">
            SolidJS Animations <u class="text-nowrap">with signals</u>
          </h1>
          <div class="mt-8 flex gap-4">
            <a
              href="/docs/"
              class="rounded-lg bg-arara-300 px-6 py-3 text-lg font-medium transition-all duration-100 active:translate-y-0.5"
            >
              Get started
            </a>
            <a
              href="/docs/primitives/spring/"
              class="rounded-lg border-2 border-arara-300 px-6 py-3 text-lg font-medium transition-all duration-100 active:translate-y-0.5"
            >
              View Docs
            </a>
          </div>
        </div>
      </div>

      <!-- Demo Sections -->
      <div class="mt-20 grid gap-20">
        <!-- Interactive Card Demo -->
        <section class="grid gap-8 md:grid-cols-2 items-center">
          <div>
            <h2 class="text-3xl font-bold mb-4">Interactive Animations</h2>
            <p class="text-lg text-arara-text/80">
              Create rich, physics-based interactions by combining springs and
              sine waves. Perfect for hover effects, micro-interactions, and
              complex UI animations.
            </p>
          </div>
          <div class="flex justify-center">
            <HoverCard client:load imgSrc={araraImage.src} class="max-w-80" />
          </div>
        </section>

        <!-- Spring Physics Demo -->
        <section class="grid gap-8 md:grid-cols-2 items-center">
          <div class="md:order-2">
            <h2 class="text-3xl font-bold mb-4">Spring Physics</h2>
            <p class="text-lg text-arara-text/80">
              Natural-feeling animations powered by spring physics. Customize
              stiffness and damping for the perfect feel. Ideal for drag
              interactions and responsive UI elements.
            </p>
          </div>
          <div class="md:order-1">
            <Spring2DDemo client:load />
          </div>
        </section>

        <!-- Sine Wave Demo -->
        <section class="grid gap-8 md:grid-cols-2 items-center">
          <div>
            <h2 class="text-3xl font-bold mb-4">Periodic Motion</h2>
            <p class="text-lg text-arara-text/80">
              Create smooth, cyclical animations with sine waves. Perfect for
              looping animations, loading indicators, and continuous motion
              effects.
            </p>
          </div>
          <div>
            <SineWave2DDemo client:load />
          </div>
        </section>
      </div>
    </main>
  </body></html
>
