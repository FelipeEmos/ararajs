---
import '@fontsource-variable/rubik/wght.css'
import '@assets/global.css'
import Fonts from '@components/Fonts.astro'
import Head from '@components/Head.astro'
import LogoDark from '@assets/logo_dark.svg'
import LogoLight from '@assets/logo_light.svg'
import rubikWoff2 from '@fontsource-variable/rubik/files/rubik-latin-wght-normal.woff2?url'
import ThemeScript from '@components/ThemeScript.astro'
import Topbar from '@components/Topbar.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Head
      title="Animated Signals for SolidJS"
      description="SolidJS animation primitives using signals, useful for procedural and highly reactive animations"
      image="https://ararajs.vercel.app/banner.jpg"
    />
    <link rel="canonical" href={Astro.url} />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={rubikWoff2}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/fonts/MonaspaceNeon-Regular-v1.101.woff2"
      crossorigin="anonymous"
    />
    <ThemeScript />
    <Fonts />
    <script
      defer
      data-domain="ararajs.vercel.app"
      data-api="/plausible/api/event/"
      src="/plausible/js/script.js"
      is:inline></script>
  </head>
  <body class="flex flex-col bg-arara-bg text-arara-text antialiased">
    <Topbar />
    <main class="mx-auto w-full max-w-7xl px-4 pb-20">
      <div class="flex grow flex-col items-center pt-40">
        <div class="flex flex-col items-center">
          <img
            src={LogoDark.src}
            alt="arara logo dark"
            class="h-40 dark:hidden md:h-52"
          />
          <img
            src={LogoLight.src}
            alt="arara logo light"
            class="hidden h-40 dark:block md:h-52"
          />
          <h1 class="mt-5 text-center text-2xl font-medium md:text-3xl">
            <span class="font-finger-paint text-3xl font-bold md:text-4xl"
              >Arara<span class="text-gray-600">JS</span></span
            >
            - animation primitives for SolidJS
          </h1>
          <p class="mt-6 max-w-2xl text-center text-lg font-normal">
            Animate your signal values, useful for highly reactive animations
          </p>
          <a
            href="/docs/"
            class="mt-6 rounded-lg bg-arara-300 px-4 py-3 text-lg font-medium transition-all duration-100 active:translate-y-0.5"
            >Get started</a
          >
        </div>
      </div>
    </main>
  </body></html
>
