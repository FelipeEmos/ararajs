---
import { Image } from 'astro:assets'
import UtilityPicture from '@assets/previews/utility.jpg'

const utilities = [
  {
    image: UtilityPicture,
    name: 'preventScroll',
    href: '/docs/utilities/prevent-scroll/',
  },
  {
    image: UtilityPicture,
    name: 'focusTrap',
    href: '/docs/utilities/focus-trap/',
  },
  {
    image: UtilityPicture,
    name: 'presence',
    href: '/docs/utilities/presence/',
  },
]
---

<div class="not-prose mt-5 @container">
  <div class="grid gap-4 @md:grid-cols-2 @3xl:grid-cols-3">
    {
      utilities.map((utility) => (
        <a
          href={utility.href}
          class="overflow-hidden rounded-xl border-[5px] border-corvu-400 bg-corvu-100"
        >
          <Image src={utility.image} alt={utility.name} width={500} />
          <span class="block px-2 py-1 text-lg font-bold">{utility.name}</span>
        </a>
      ))
    }
  </div>
</div>
